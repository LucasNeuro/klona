  <div class="max-w-7xl mx-auto px-6">
    <div class="bg-white rounded-sm shadow-2xl p-8 border border-slate-200">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="p-4">
          <div class="text-5xl font-black text-yellow-500 block leading-none mb-2">
            78%
          </div>
          <div class="text-sm text-slate-600 font-semibold uppercase tracking-wider">
            Economia Comprovada
          </div>
        </div>
        
        <div class="p-4">
          <div class="text-5xl font-black bg-gradient-to-r from-primary-500 to-secondary-500 bg-clip-text text-transparent block leading-none mb-2">
            6x
          </div>
          <div class="text-sm text-slate-600 font-semibold uppercase tracking-wider">
            Mais Eficiência
          </div>
        </div>
        
        <div class="p-4">
          <div class="text-5xl font-black bg-gradient-to-r from-primary-500 to-secondary-500 bg-clip-text text-transparent block leading-none mb-2">
            1
          </div>
          <div class="text-sm text-slate-600 font-semibold uppercase tracking-wider">
            Solução Integrada
          </div>
        </div>
        
        <div class="p-4">
          <div class="text-4xl font-black text-red-500 block leading-none mb-2">
            R$ 50K
          </div>
          <div class="text-sm text-slate-600 font-semibold uppercase tracking-wider">
            Economia Mensal
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
